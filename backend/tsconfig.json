{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "types": ["node", "jest"],
  },
  "include": [
    "src/**/*", "types/**/*.d.ts",
    "test/**/*.ts"
, "backend/src/index.ts", "backend/src/routes.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
